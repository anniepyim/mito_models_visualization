// Import font form google
@import url(https://fonts.googleapis.com/css?family=Montserrat:400,700);

// Import Bootstrap
@import url(https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css);

/* SVG responsive */

#wrapUp {
    white-space:nowrap;
}

.svg-container {
    display: inline-block;
    position: relative;
    width: 100%;
    padding-bottom: 100%; /* aspect ratio */
    vertical-align: top;
    overflow: hidden;
}
.svg-content-responsive {
    display: inline-block;
    position: absolute;
    top: 10px;
    left: 0;
}

/* Search cirlce */

.search {
    fill : #55568C;
}

.title{
    font-family: 'Montserrat', 'sans-serif';
    font-weight: 700;
    text-transform: uppercase;
    font-size:18px;
}

.miniTitle{
    font-family: 'Montserrat', 'sans-serif';
    font-weight: 700;
    text-transform: uppercase;
    font-size:13px;
    text-align: left;
}

.legendText{
    text-align: left;
    font-size: 11px;
    /* margin-bottom: 10px; */
    line-height: 1.5;
}

/* Gene Tooltip */

.tip {
    text-align: center;
    border-right: solid 1px #DDD;
}

.tip .process{
    margin-top: 5px;
    margin-bottom: 8px;
}

.tip .function {
    color: #666;
    text-align: center;
    font-style: italic;
    margin-bottom: 8px;
    font-size: 12px;
}

.tip .mutation {
    text-align: left;
    font-size: 10px;
}

/* Search Results */
.results {
    display: none;
    position: absolute;
    top: 35px;
    left: 0;
    right: 0;
    z-index: 10;
    margin-top: 10;
    -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    -ms-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    -o-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

.results .title {
    font-family: 'Montserrat', 'sans-serif';
    font-weight: 700;
    text-transform: uppercase;
    font-size:13px;
    text-align: left;
}

.results li { display: block }

.results li:first-child:before, .results li:first-child:after {
    display: block;
    content: '';
    width: 0;
    height: 0;
    position: absolute;
    left: 50%;
    margin-left: -5px;
    border: 5px outset transparent;
}

.results li:first-child:before {
    border-bottom: 5px solid #ddd;
    top: -11px;
}

.results li:first-child:after {
    border-bottom: 5px solid #fdfdfd;
    top: -10px;
}

.results li:first-child:hover:before, .results li:first-child:hover:after { display: none }

.results li:first-child { margin-top: -1px }

.results li:hover {
    text-decoration: none;
    color: #fff;
    text-shadow: 0 -1px rgba(0, 0, 0, 0.3);
    border-color: #2380dd #2179d5 #1a60aa;
    background-color: #338cdf;
    cursor: pointer;
}

/* Node Labels */
/*
 * h3 node labels
 */
.node {
    font-weight: 500;
    color: #2c3e50;
    position: absolute;
    width: 8em;
    margin-left: -4em;
    text-align: center;
    opacity: 1;
    cursor:pointer;
}

.node.theme {
    font-weight: 700;
    text-transform: uppercase;
}

.vis {
    top: 0;
    left: 0;
    overflow: hidden;
    position:relative;
}


.canvas {
    height: 100%;
    overflow: hidden;
}


.nav_bar {
    border-bottom: solid 1px #DDD;
    padding: 15px 0 0;
    margin: 0 10px;
}

.legend {
    padding: 1.5em 0 0 1.5em;
    font-size: 12px;
}

